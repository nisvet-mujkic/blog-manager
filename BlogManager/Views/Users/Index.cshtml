@model UsersIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>The User List</h2>

<hr />

<div class="row">
    <form asp-action="Index" method="get">
        <div class="col-md-10">
            <input asp-for="SearchTerm" class="form-control" placeholder="Enter your search criteria such as Name or an Email" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary" style="width:165px;"><i class="glyphicon glyphicon-search"></i> Search</button>
        </div>
    </form>
</div>

<br />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th class="text-center">Age</th>
            <th>Email</th>
            <th class="text-center">Blogs</th>
            <th class="text-center">View profile</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Rows)
        {
            <tr>
                <td>@user.Name</td>
                <td class="text-center">@user.Age</td>
                <td>@user.Email</td>
                <td class="text-center">@user.NumberOfBlogsCreated</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-userId="@user.UserId" class="btn btn-info"><i class="glyphicon glyphicon-user"></i> View Profile</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-12">
        <div pagination-helper="@Model.PaginationHelper" page-action="Index"
             page-classes-enabled="true" page-class="btn" page-class-normal="btn-default"
             page-class-selected="btn-primary" class="btn-group pull-right"></div>
    </div>    
</div>

