@model BlogsIndexViewModel

<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            <div class="form-group">
                <button class="btn btn-primary" style="width:250px;" data-toggle="modal" data-target="#myModal">Create a new Blog</button>
            </div>
        </div>

        <form asp-action="Index" method="get">
            <input asp-for="UserId" hidden />
            <div class="col-md-3">
                <div class="form-group">
                    <div class='input-group date dp'>
                        <input type="text" asp-for="DateFrom" class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <div class='input-group date dp'>
                        <input type="text" asp-for="DateTo" class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width:250px;"><i class="glyphicon glyphicon-search"></i> Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Summary</th>
                    <th>Publishing Date Time</th>
                    <th>Edit blog</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model.Rows)
                {
                    <tr>
                        <td>@blog.Title</td>
                        <td>@blog.Summary</td>
                        <td>@blog.PublishingDateTime.ToString("hh:mm, dd MMM yyyy")</td>
                        <td>
                            <button class="btn btn-info">Edit blog</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div pagination-helper="@Model.PaginationHelper" page-action="Index"
             page-classes-enabled="true" page-class="btn" page-class-normal="btn-default"
             page-class-selected="btn-primary" class="btn-group pull-right"></div>
    </div>
</div>

@Html.Partial("_BlogPartial", new Blog())
